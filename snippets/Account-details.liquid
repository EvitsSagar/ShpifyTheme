<div class="flex flex-col space-y-10">
  <div class="">
    <div class="bg-gray-50 rounded-2xl border shadow-md px-8 py-4 w-2/6">
      <div class="flex justify-between">
        <div>
          <img
            class="inline object-cover w-16 h-16 rounded-full bg-indigo-300"
            src="https://i.ibb.co/VHtxSmt/avataaars.png"
            alt="Profile image"
            width=""
            height=""
          >
        </div>
        <div>
          <h3 class="font-bold text-xl text-gray-500">Welcome</h3>
          <h3 class="font-bold text-xl text-gray-700">{{ customer.name }}</h3>
        </div>
      </div>
    </div>
  </div>
  {% comment %} <h3 class="">{{ 'customer.account.details' | t }}</h3> {% endcomment %}

  {% comment %} {{ customer.default_address | format_address }} {% endcomment %}

  <div class="">
    <h3 class="font-semibold col-span-2 border-y-2 border-gray-300 text-center">Default Address</h3>
    <div class="grid grid-cols-2 gap-6 py-6 px-10">
      <div class="relative float-label-input">
        <input
          type="text"
          id="name"
          placeholder=" "
          disabled
          value="{{ customer.default_address.first_name }}"
          class="w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 block appearance-none leading-normal focus:border-blue-400"
        >
        <label
          for="name"
          class="absolute top-3 left-0 text-gray-400 pointer-events-none transition duration-200 ease-in-outbg-white px-2 text-grey-darker"
          >First Name</label
        >
      </div>

      <div class="relative float-label-input">
        <input
          type="text"
          id="name"
          placeholder=" "
          disabled
          value="{{ customer.default_address.last_name }}"
          class="w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 block appearance-none leading-normal focus:border-blue-400"
        >
        <label
          for="name"
          class="absolute top-3 left-0 text-gray-400 pointer-events-none transition duration-200 ease-in-outbg-white px-2 text-grey-darker"
          >Last Name</label
        >
      </div>

      <div class="relative float-label-input">
        <input
          type="text"
          id="City"
          placeholder=" "
          disabled
          value="{{ customer.default_address.city }}"
          class="w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 block appearance-none leading-normal focus:border-blue-400"
        >
        <label
          for="City"
          class="absolute top-3 left-0 text-gray-400 pointer-events-none transition duration-200 ease-in-outbg-white px-2 text-grey-darker"
          >City</label
        >
      </div>

      <div class="relative float-label-input">
        <input
          type="text"
          id="country"
          placeholder=" "
          disabled
          value="{{ customer.default_address.country }}"
          class="w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 block appearance-none leading-normal focus:border-blue-400"
        >
        <label
          for="country"
          class="absolute top-3 left-0 text-gray-400 pointer-events-none transition duration-200 ease-in-outbg-white px-2 text-grey-darker"
          >country</label
        >
      </div>

      <div class="relative float-label-input">
        <input
          type="text"
          id="Pin"
          placeholder=" "
          disabled
          value="{{ customer.default_address.zip }}"
          class="w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 block appearance-none leading-normal focus:border-blue-400"
        >
        <label
          for="Pin"
          class="absolute top-3 left-0 text-gray-400 pointer-events-none transition duration-200 ease-in-outbg-white px-2 text-grey-darker"
          >Pin</label
        >
      </div>

      <div class="relative float-label-input">
        <input
          type="text"
          id="Province"
          placeholder=" "
          disabled
          value="{{ customer.default_address.province }}"
          class="w-full bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded-md py-3 px-3 block appearance-none leading-normal focus:border-blue-400"
        >
        <label
          for="Province"
          class="absolute top-3 left-0 text-gray-400 pointer-events-none transition duration-200 ease-in-outbg-white px-2 text-grey-darker"
          >Province</label
        >
      </div>
    </div>
  </div>

  <div class="px-10">
    <a class="float-right" href="{{ routes.account_addresses_url }}">
      {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
    </a>
  </div>
</div>
